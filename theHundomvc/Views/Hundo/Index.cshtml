@{
}


<div class="text-center">

    <h1> One Hundo. One Hundred numbers</h1>
    <form asp-controller="Hundo" asp-action="Index" method="post">
        <div class="form-group">
            <label asp-for="StartValue">Start Value</label>
            <input type="number" asp-for="StartValue" class="form-control" placeholder="Enter Start Value" value="@Model.StartValue"/>
        </div>
            <div class="form-group">
                <label asp-for="EndValue"></label>
                <input type="number" asp-for="EndValue" class="form-control" placeholder="Enter End Value" value="@Model.EndValue" />
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
    </form>
    <table class="table-striped table table-dark table-hover">
        <thead>
            <tr>
                <th colspan="5">The Numbers</th>
            </tr>
        </thead>

        @for (int i = 0; i < Model.Results.Count; i += 5)
        {
    <tr>
        <td>@Model.Results[i]</td>
        <td>@Model.Results[i+1]</td>
        <td>@Model.Results[i+2]</td>
        <td>@Model.Results[i+3]</td>
        <td>@Model.Results[i+3]</td>
    </tr>
        }

    </table>
</div>


